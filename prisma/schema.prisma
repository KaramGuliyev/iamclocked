generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id               String   @id @default(uuid()) @map("_id")
  email            String   @unique
  name             String?
  image            String?  // Burada image alan覺n覺 ekledik
  emailVerified     DateTime?
  accounts         Account[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}


model Account {
  id                String   @id @default(uuid()) @map("_id")
  provider          String
  providerAccountId String
  userId            String
  user              User    @relation(fields: [userId], references: [id])
  access_token      String?
  expires_at        Int?
  scope             String?
  token_type        String?
  id_token          String?
  type              String? // 'type' alan覺n覺 ekleyin
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@unique([provider, providerAccountId])
}





